<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:text="Life Story Events"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:text="Show life story events"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/lifeStorySwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:text="Family Lines"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:text="Show family tree lines"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/familyLinesSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:text="Spouse Lines"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:text="Show spouse lines"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/spouseLinesSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:text="Father's Side"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:text="Filter by father's side of family"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/fatherSideSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:text="Mother's Side"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:text="Filter by mother's side of family"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/motherSideSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:text="Male Events"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:text="Filter events based on gender"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/maleEventsSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:text="Female Events"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="15sp"
                    android:text="Filter events based on gender"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/femaleEventsSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="20sp"
                android:text="Logout"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15sp"
                android:text="Return to the Login screen"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>