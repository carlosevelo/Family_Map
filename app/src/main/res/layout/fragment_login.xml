<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="9"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Host"
                android:layout_gravity="right"/>

            <EditText
                android:id="@+id/serverHostValue"
                android:text="10.0.2.2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="105dp"
                android:padding="10dp"
                android:ems="10"                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Server Port"
                android:layout_gravity="right"/>

            <EditText
                android:id="@+id/serverPortValue"
                android:text="8080"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="105dp"
                android:padding="10dp"
                android:ems="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Username"
                android:layout_gravity="right"/>

            <EditText
                android:id="@+id/userNameValue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="105dp"
                android:padding="10dp"
                android:ems="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Password"
                android:layout_gravity="right"/>

            <EditText
                android:id="@+id/passwordValue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="105dp"
                android:padding="10dp"
                android:ems="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="First Name"
                android:layout_gravity="right"/>

            <EditText
                android:id="@+id/firstNameValue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="105dp"
                android:padding="10dp"
                android:ems="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Last Name"
                android:layout_gravity="right"/>

            <EditText
                android:id="@+id/lastNameValue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="105dp"
                android:padding="10dp"
                android:ems="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Email"
                android:layout_gravity="right"/>

            <EditText
                android:id="@+id/emailValue"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="105dp"
                android:padding="10dp"
                android:ems="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Gender"
                android:layout_gravity="right"/>

            <RadioGroup android:id="@+id/genderRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton android:id="@+id/radio_male"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:text="Male" />

                <RadioButton android:id="@+id/radio_female"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:text="Female" />

            </RadioGroup>


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center" >

            <Button android:id="@+id/button_login"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:text="Login" />

            <Button android:id="@+id/button_register"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Register" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>